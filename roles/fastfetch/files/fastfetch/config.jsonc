          "key": "  󰍛"
      },
      {
          "type": "disk",
          "folders": "/",
          "key": "  "
      },
      {
          "type": "memory",
          "key": "  󰑭"
      },
/*       {
          "type": "swap",
          "key": "  󰓡"
      }, */
